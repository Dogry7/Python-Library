// Name: Ryan Cleminson// Class: SDD// Date: 27/03/2017/*****************************************                 Constant*****************************************//*****************************************                   DIM*****************************************/DIM option AS STR255//DIM counter AS SHORT//DIM counter2 AS SHORT//DIM errflaglen AS SHORT// General VariablesDIM errflagnum AS SHORT//DIM Valid AS STR255//DIM index AS SHORT//DIM power AS SHORT//DIM Binary AS STR255//DIM BDCalc1 AS STR255//DIM BDCalc2 AS STR255//DIM BDC1 AS SHORT// Binary To Decimal VariablesDIM BDC2 AS SHORT//DIM carry AS SHORT//DIM BinToDecNumBack AS STR255//DIM BinToDecNumFront AS STR255//DIM FinalDec1 AS SHORT//DIM decnum1 AS SHORT//DIM decnum2 AS SHORT//     Variables for both BinToDecDIM binarynum1 AS STR255//     and DecToBinDIM binarynum2 AS STR255//DIM DecToBinNum1 AS STR255DIM DecToBinNum2 AS STR255DIM DecToBinNumFinalFront AS STR255DIM DecToBinNumFinalBack AS STR255DIM FinalDec2 AS SHORTDIM DBCalc1 AS STR255DIM DBCalc2 AS STR255DIM DBC1 AS SHORTDIM DBC2 AS SHORT/*****************************************              Main Program*****************************************/WINDOW 1, "Exchange Rate", (0,0)-(900,700)//////////*DIM temp AS STR255LET BinToDecNumBack = "10"LET temp = MID$(BinToDecNumBack,1,1)TEXT , , _ulineBit%PRINT "HERE IT IS!!!!!! " tempSTOP*////////////GOSUB "interface"DODODOCLSPRINT "1. Binary to Decimal"PRINT "2. Decimal to Binary"PRINT "3. Quit"PRINT INPUT "Please Enter one of the above numbers: " optionCLSUNTIL option = "1" OR option = "2" OR  option = "3"SELECT optionCASE "1"/*GOSUB "BinToDec"*/CASE "2"GOSUB "DecToBin"CASE "3"LET counter2 = 1END SELECTUNTIL option = "3"GOSUB "leaveprogram"UNTIL option = "Y" OR option = "y"STOP/*****************************************              SUB ROUTINES*****************************************//*****************************************                INTERFACE*****************************************/"interface"BOX FILL 0,0 TO 900,700//LONG COLOR (0*255), (0*255), (0*255), _FALSE : CLSLONG COLOR (247*255), (156*255), (64*255)BOX FILL 0,0 TO 900,100BOX FILL 900,700 TO 0,600COLOR _zWhiteTEXT _helvetica, 55, 0PRINT %(40,70) "BINARY ADDITION"RETURN/*****************************************            Binary to Decimal*****************************************/"BinToDec"DOLET errflaglen = 0LET errflagnum = 0LET carry = 0DOCLSIF errflaglen = 1PRINT "Please enter a 8 digit long binary number!"END IFIF errflagnum = 1PRINT "Please make sure that the numbers you enter are either a 1 or a 0"END IFINPUT "Please enter the first number in binary form: "; binarynum1GOSUB "BinToDecValid"UNTIL errflaglen = 0 AND errflagnum = 0DOCLSLET errflaglen = 0LET errflagnum = 0IF errflaglen = 1PRINT "Please enter a 8 digit long binary number!"END IFIF errflagnum = 1PRINT "Please make sure that the numbers you enter are either a 1 or a 0"END IFINPUT "Please enter the second number in binary form: "; binarynum2GOSUB "BinToDecValid2"UNTIL errflaglen = 0 AND errflagnum = 0GOSUB "BinToDec Calc"UNTIL carry = 0GOSUB "DecCon1"GOSUB "DecCon2"GOSUB "FinalCon"PRINT binarynum1" = "decnum1PRINT binarynum2" = "decnum2PRINT "--------------"PRINT BinToDecNumFront" = "FinalDec1INPUT "Press enter to continue"; optionRETURN/*****************************************    Binary To Decimal Validation NUM 1*****************************************/"BinToDecValid"LET errflaglen = 0LET errflagnum = 0IF LEN(binarynum1) = 8LET index = 1DOLET Valid = MID$(binarynum1, index, 1)IF Valid = "1" OR Valid = "0"LET errflagnum = 0ELSELET errflagnum = 1END IFLET index = index + 1UNTIL index = 9 OR errflagnum = 1ELSELET errflaglen = 1END IFRETURN/*****************************************    Binary To Decimal Validation NUM 2*****************************************/"BinToDecValid2"IF LEN(binarynum2) = 8LET index = 1DOLET Valid = MID$(binarynum2, index, 1)IF Valid = "1" OR Valid = "0"LET errflagnum = 0ELSELET errflagnum = 1END IFLET index = index + 1UNTIL index = 9 OR errflagnum = 1ELSELET errflaglen = 1END IFRETURN/*****************************************       Binary To Decimal Calculation*****************************************/"BinToDec Calc"LET index = 8DOLET BDCalc1 = MID$(binarynum1, index, 1)IF BDCalc1 = "0"LET BDC1 = 0ELSELET BDC1 = 1END IFLET BDCalc2 = MID$(binarynum2, index, 1)IF BDCalc2 = "0" LET BDC2 = 0ELSELET BDC2 = 1END IF//IF BDC1 = 0 AND BDC2 = 0IF carry = 1LET BinToDecNumBack = BinToDecNumBack + "1"LET carry = 0ELSELET BinToDecNumBack = BinToDecNumBack + "0"END IFEND IFIF BDC1 = 1 AND BDC2 = 1IF carry = 1LET BinToDecNumBack = BinToDecNumBack + "1"LET carry = 1ELSELET BinToDecNumBack = BinToDecNumBack + "0"LET carry = 1END IFEND IFIF BDC1 = 1 AND BDC2 = 0IF carry = 1LET BinToDecNumBack = BinToDecNumBack + "0"ELSELET BinToDecNumBack = BinToDecNumBack + "1"LET carry = 0END IFEND IFIF BDC1 = 0 AND BDC2 = 1IF carry = 1LET BinToDecNumBack = BinToDecNumBack + "0"ELSELET BinToDecNumBack = BinToDecNumBack + "1"LET carry = 0END IFEND IFLET index = index - 1UNTIL index = 0IF carry = 1PRINT "Your numbery equates to more than 256. Please enter different values that = less than 256"INPUT "Press enter to continue: ";optionLET BinToDecNumBack = ""RETURNEND IFLET index = 9DOLET BinToDecNumFront = BinToDecNumFront  + MID$(BinToDecNumBack,index,1)LET index = index - 1UNTIL index = 0RETURN/*****************************************            Decimal Conversion 1*****************************************/"DecCon1"LET index = 1LET power = 7DOLET Binary = MID$(binarynum1, index, 1)IF Binary = "1"LET decnum1 = decnum1 + 2^powerEND IFLET index = index + 1LET power = power - 1UNTIL index = 9RETURN/*****************************************           Decimal Conversion 2*****************************************/"DecCon2"LET index = 1LET power = 7DOLET Binary = MID$(binarynum2, index, 1)IF Binary = "1"LET decnum2 = decnum2 + 2^powerEND IFLET index = index + 1LET power = power - 1UNTIL index = 9RETURN/*****************************************            Final Conversion*****************************************/"FinalCon"LET index = 1LET power = 7DOLET Binary = MID$(BinToDecNumFront, index, 1)IF Binary = "1"LET FinalDec1 = FinalDec1 + 2^powerEND IFLET index = index + 1LET power = power - 1UNTIL index = 9RETURN/*****************************************            *****************************************/*****************************************            *****************************************//*****************************************            *****************************************//*****************************************            *****************************************//*****************************************            *****************************************//*****************************************            *****************************************/////////////////////////////////////////////*****************************************            Decimal to Binary*****************************************/"DecToBin"LET errflagnum = 0DOCLSIF errflagnum = 1PRINT "Please enter a number that is less that 256"END IFINPUT "Please enter the first number in decimal form: "; decnum1GOSUB "DecToBinValid1"UNTIL errflaglen = 0 AND errflagnum = 0DOCLSIF errflagnum = 1PRINT "Please enter a number that is less that 256"END IFINPUT "Please enter the second number in decimal form: "; decnum2GOSUB "DecToBinValid2"UNTIL errflaglen = 0 AND errflagnum = 0GOSUB "DecToBinValid3"GOSUB "DecToBinConv1"GOSUB "DecToBinConv2"PRINT decnum1" = "DecToBinNum1PRINT decnum2" = "DecToBinNum2PRINT "-----------------------"PRINT "          "DecToBinNumFinalFront" = "FinalDec2INPUT "Press enter to continue: ";optionRETURN/*****************************************        Decimal to Binary Valid 1*****************************************/"DecToBinValid1"LET errflagnum = 0  IF decnum1 <= 256 AND decnum1 >=0LET errflagnum = 0ELSELET errflagnum = 1END IFRETURN/*****************************************        Decimal to Binary Valid 2*****************************************/"DecToBinValid2"LET errflagnum = 0IF decnum1 <= 256 AND decnum1 >=0LET errflagnum = 0ELSELET errflagnum = 1END IFRETURN/*****************************************        Decimal to Binary Valid 3*****************************************/"DecToBinValid3"LET errflagnum = 0IF decnum1 + decnum2 <= 256 AND decnum1 + decnum2 >=0LET errflagnum = 0ELSELET errflagnum = 1END IF/*****************************************      Decimal to Binary Conversion 1*****************************************/"DecToBinConv1"LET power = 7LET index = 1DOIF decnum1 >= 2^powerDecToBinNum1 = DecToBinNum1 + "1"LET decnum1 = decnum1 - 2^powerELSEDecToBinNum1 = DecToBinNum1 + "0"END IFLET power = power - 1LET index = index + 1UNTIL index = 9RETURN/*****************************************      Decimal to Binary Conversion 2*****************************************/"DecToBinConv2"LET power = 7LET index = 1DOIF decnum2 >= 2^powerDecToBinNum2 = DecToBinNum2 + "1"LET decnum2 = decnum2 - 2^powerELSEDecToBinNum2 = DecToBinNum2 + "0"END IFLET power = power - 1LET index = index + 1UNTIL index = 9RETURN/*****************************************      Decimal to Binary Conversion 3*****************************************/"DecToBinConv3"LET index = 1LET power = 7DOLET Binary = MID$(DecToBinNumFinalFront, index, 1)IF Binary = "1"LET FinalDec2 = FinalDec2 + 2^powerEND IFLET index = index + 1LET power = power - 1UNTIL index = 9RETURN/*****************************************      Decimal to Binary Addition*****************************************/LET index = 8DOLET DBCalc1 = MID$(DecToBinNum1, index, 1)IF DBCalc1 = "0"LET DBC1 = 0ELSELET DBC1 = 1END IFLET DBCalc2 = MID$(DecToBinNum2, index, 1)IF BDCalc2 = "0" LET DBC2 = 0ELSELET DBC2 = 1END IF//IF DBC1 = 0 AND DBC2 = 0IF carry = 1LET DecToBinNumFinalBack = DecToBinNumFinalBack + "1"LET carry = 0ELSELET DecToBinNumFinalBack = DecToBinNumFinalBack + "0"END IFEND IFIF DBC1 = 1 AND DBC2 = 1IF carry = 1LET DecToBinNumFinalBack = DecToBinNumFinalBack + "1"LET carry = 1ELSELET DecToBinNumFinalBack = DecToBinNumFinalBack + "0"LET carry = 1END IFEND IFIF DBC1 = 1 AND DBC2 = 0IF carry = 1LET DecToBinNumFinalBack = DecToBinNumFinalBack + "0"ELSELET DecToBinNumFinalBack = DecToBinNumFinalBack + "1"LET carry = 0END IFEND IFIF DBC1 = 0 AND DBC2 = 1IF carry = 1LET DecToBinNumFinalBack = DecToBinNumFinalBack + "0"ELSELET DecToBinNumFinalBack = DecToBinNumFinalBack + "1"LET carry = 0END IFEND IFLET index = index - 1UNTIL index = 0LET index = 9DOLET DecToBinNumFinalFront = DecToBinNumFinalFront + MID$(BinToDecNumBack,index,1)LET index = index - 1UNTIL index = 0RETURN/*****************************************            *****************************************/*****************************************            *****************************************//*****************************************            *****************************************//*****************************************            *****************************************//*****************************************            *****************************************//*****************************************            *****************************************/////////////////////////////////////////////*****************************************           Leaving the Program*****************************************/"leaveprogram"LET counter = 0IF counter2 != 1DOCLSIF counter = 1 PRINT "Please enter the letter Y for yes or the letter N for no"END IFINPUT "Would you like to exit the Binary Addition Program? (Y/N): "; optionLET counter = 1UNTIL option = "Y" OR option = "y" OR option = "N" OR option = "n"ELSE DOCLSIF counter = 1 PRINT "Please enter the letter Y for yes or the letter N for no"END IFINPUT "Are you sure you wish to exit the program? (Y/N) "; optionLET counter = 1UNTIL option = "Y" OR option = "y" OR option = "N" OR option = "n"END IFRETURN