// Name: Ryan Cleminson// Class: SDD// Date: 27/02/2017/*****************************************                 Constant*****************************************//*****************************************                   DIM*****************************************/DIM num AS STR255DIM errflag AS SHORTDIM again AS STR255DIM Valid AS STR255DIM power AS SHORTDIM guess AS SHORTDIM show AS STR255DIM index AS SHORTDIM option AS STR255DIM Binary AS STR255DIM sum AS SHORT/*****************************************              Main Program*****************************************/WINDOW 1, "Bin to Dec", (0,0)-(1000,1000)DODOINPUT "What is you binary number? "; numGOSUB "Validate"UNTIL errflag=0GOSUB "Convert"GOSUB "Sum"INPUT "Do you want to try again? "; againUNTIL again = "no" OR again = "NoEND/*****************************************              SUB ROUTINES*****************************************//*****************************************                 Validate*****************************************/"Validate"IF LEN(num) = 8LET index = 1DOLET Valid = MID$(num, index, 1)IF Valid = "1" OR Valid = "0"LET errflag = 0ELSELET errflag = 1PRINT "A number you have entered isn't a 1 of a 0"END IFLET index = index + 1UNTIL index = 9 OR errflag = 1END IFINPUT "Press enter to go back to the main menu"; optionRETURN/*****************************************                 Convert*****************************************/"Convert"LET index = 1LET power = 7DOLET Binary = MID$(num, index, 1)IF Binary = "1"LET sum = sum + 2^powerEND IFLET index = index + 1LET power = power - 1UNTIL index = 9INPUT "Press enter to go back to the main menu"; optionRETURN/*****************************************                 SUM*****************************************/"Sum"LET index = 1LET power = 1INPUT "What do yoy think the number is"; guessIF guess = sumPRINT "Correct"ELSEPRINT "Wrong - Thhe correct answer is ....."END IFPRINT "Your binary is " numDOLET show = MID$(num, index, 1)PRINT show" * (2**"power")"LET index = index + 1LET power = power + 1UNTIL index = 9PRINT "The conversion = "sumINPUT "Press enter to go back to the main menu"; optionRETURN